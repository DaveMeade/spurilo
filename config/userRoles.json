{
  "roles": {
    "system": {
      "admin": {
        "id": "admin",
        "name": "System Administrator",
        "description": "Full platform administration. Can manage all aspects of the system.",
        "permissions": [
          "*"
        ]
      },
      "auditor": {
        "id": "auditor",
        "name": "Auditor",
        "description": "Consultant role. Can create and manage engagements across organizations.",
        "permissions": [
          "view_all_engagements",
          "create_engagement",
          "manage_engagements",
          "manage_findings",
          "generate_reports"
        ]
      }
    },
    "engagement": {
      "engagement_owner": {
        "id": "engagement_owner",
        "name": "Engagement Owner",
        "description": "The primary contact at the customer responsible for completing the engagement.",
        "permissions": [
          "view_engagement",
          "manage_customer_users",
          "view_dashboard",
          "view_reports",
          "respond_to_requests",
          "schedule_meetings",
          "upload_evidence",
          "view_findings",
          "create_corrective_actions"
        ],
        "default_role_ids": ["owner"]
      },
      "sme": {
        "id": "sme",
        "name": "SME",
        "description": "A customer subject matter expert.",
        "permissions": [
          "view_engagement",
          "respond_to_interviews",
          "attend_meetings",
          "upload_evidence",
          "view_assigned_tasks",
          "respond_to_requests"
        ]
      },
      "controlOwner": {
        "id": "controlOwner",
        "name": "Control Owner",
        "description": "A customer user who owns one or more controls being audited.",
        "permissions": [
          "view_engagement",
          "view_assigned_controls",
          "respond_to_interviews",
          "attend_meetings",
          "upload_evidence",
          "respond_to_requests",
          "view_control_findings",
          "create_corrective_actions"
        ]
      },
      "manager": {
        "id": "manager",
        "name": "Manager",
        "description": "A customer management stakeholder. Can view audit event schedules and reports.",
        "permissions": [
          "view_engagement",
          "view_schedule",
          "view_reports",
          "view_dashboard",
          "view_findings"
        ]
      },
      "executive": {
        "id": "executive",
        "name": "Executive",
        "description": "A customer executive stakeholder. Can view audit event schedules and reports.",
        "permissions": [
          "view_engagement",
          "view_schedule",
          "view_reports",
          "view_dashboard",
          "view_findings",
          "view_executive_summary"
        ]
      },
      "customer": {
        "id": "customer",
        "name": "Customer User",
        "description": "General customer user with basic permissions.",
        "permissions": [
          "view_engagement",
          "respond_to_requests"
        ]
      },
      "consultant": {
        "id": "consultant",
        "name": "Consultant",
        "description": "External consultant with engagement access.",
        "permissions": [
          "view_engagement",
          "create_findings",
          "update_findings",
          "request_evidence",
          "generate_reports"
        ]
      }
    }
  },
  "systemSettings": {
    "allowMultipleRoles": true,
    "requireRoleAssignment": true,
    "defaultRole": "sme",
    "enableRoleHierarchy": true,
    "maxRolesPerUser": 5,
    "enablePermissionInheritance": true
  }
}